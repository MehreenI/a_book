<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/book_image"
        app:srcCompat="@drawable/add_24"
        tools:srcCompat="@drawable/add_24" />

    <TextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/favorite"
        android:layout_toEndOf="@+id/imageView"
        android:maxLines="2"
        android:text="@string/bookname"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/favourite_img"
        app:srcCompat="@drawable/baseline_delete_24" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookname"
        android:layout_alignStart="@+id/bookname"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:maxLines="1"
        android:text="@string/price"
        android:textColor="@color/theme"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_alignStart="@+id/bookname"
        android:layout_marginStart="96dp"
        android:maxLines="1"
        android:text="@string/date"
        android:textSize="14sp" />

    <View
        android:id="@+id/line_6"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/datetime"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/gray"
        android:layout_marginTop="16dp" />
    <View
        android:id="@+id/line_7"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/line_6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/gray"
        android:layout_marginTop="2dp" />
</RelativeLayout>